<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:paddingTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="LIVETEX"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="24dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:text="Приложение для демонстрации"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="18sp"
            android:text="возможностей LiveTex Mobile SDK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="24dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/btn_blue"
            android:id="@+id/btnOnlineMode"
            android:enabled="false"
            android:text="ЧАТ С ОПЕРАТОРОМ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="6dp"
            android:text="Для общения с сотрудниками LiveTex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="в режиме реального времени"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/btn_blue"
            android:id="@+id/btnOfflineMode"
            android:text="ОБРАЩЕНИЕ В ПОДДЕРЖКУ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="6dp"
            android:text="Для создания нескольких обращений"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="без необходимости общения в режиме"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="реального времени"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>